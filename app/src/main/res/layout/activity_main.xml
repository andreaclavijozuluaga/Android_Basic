<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="610dp"
            android:background="#CDDC39"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" >

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#212121"
                android:textSize="25dp"
                android:gravity="center"
                android:text="Andrea Clavijo Restaurant" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/tvCena"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF5722"
                android:gravity="center"
                android:text="Platos"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textColor="#fff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvCena2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF5722"
                android:gravity="center"
                android:text="Platos"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textColor="#fff"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="343dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:layout_constraintVertical_bias="0.0" >

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.70"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:paddingTop="5dp"
                                android:id="@+id/tvcolombia"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="         Colombia"
                                android:textSize="15dp"
                                android:textColor="#757575" />

                            <RadioButton
                                android:id="@+id/rbtnbandejapaisa"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:onClick="elegir_plato"
                                android:textSize="18dp"
                                android:text="Bandeja Paisa"
                                android:checked="false"/>

                            <TextView
                                android:id="@+id/tvprecio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="         $ 24.000" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/linearLayout4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.30">
                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            app:srcCompat="@mipmap/bp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.70"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvitalia1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="5dp"
                                android:text="         Italia"
                                android:textColor="#757575"
                                android:textSize="15dp" />

                            <RadioButton
                                android:id="@+id/rbtnbolonegsa"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:onClick="elegir_plato"
                                android:text="Pasta Bolognesa"
                                android:textSize="18dp" />

                            <TextView
                                android:id="@+id/tvprecio1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="         $ 30.000" />
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/linearLayout6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.30">
                        <ImageView
                            android:id="@+id/imageView14"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            app:srcCompat="@mipmap/pb" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.70"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:paddingTop="5dp"
                                android:id="@+id/tvcolombia1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="         Colombia"
                                android:textSize="15dp"
                                android:textColor="#757575" />

                            <RadioButton
                                android:id="@+id/rbtnsancocho"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:onClick="elegir_plato"
                                android:textSize="18dp"
                                android:text="Sancocho de Bagre"/>

                            <TextView
                                android:id="@+id/tvprecio2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="         $ 28.000" />
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/linearLayout7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.30">

                        <ImageView
                            android:id="@+id/imageView15"
                            android:layout_width="116dp"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            app:srcCompat="@mipmap/sb1" />
                    </RelativeLayout>
                </LinearLayout>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="395dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:background="#FF5722"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Bebidas"
                android:textColor="#ffff"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout11"
            android:layout_width="390dp"
            android:layout_height="170dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout8"
            app:layout_constraintVertical_bias="0.0">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.70"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvgaseosa"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="5dp"
                                android:text="         Gaseosa 250 ml"
                                android:textColor="#757575"
                                android:textSize="15dp" />

                            <RadioButton
                                android:id="@+id/rbtngaseosa"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="false"
                                android:onClick="elegirBebida"
                                android:text="Coca - Cola"
                                android:textSize="18dp" />

                            <TextView
                                android:id="@+id/tvprecio3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="         $ 6.000" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/linearLayout9"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.30">

                        <ImageView
                            android:id="@+id/imageView16"
                            android:layout_width="116dp"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            app:srcCompat="@mipmap/cc" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.70"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvjugo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="5dp"
                                android:text="         Italia"
                                android:textColor="#757575"
                                android:textSize="15dp" />

                            <RadioButton
                                android:id="@+id/rbtnjugo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Jugo Natural"
                                android:onClick="elegirBebida"
                                android:textSize="18dp" />

                            <TextView
                                android:id="@+id/tvprecio4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="         $ 9.000" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/linearLayout10"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.30">

                        <ImageView
                            android:id="@+id/imageView17"
                            android:layout_width="116dp"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            app:srcCompat="@mipmap/jn" />
                    </RelativeLayout>
                </LinearLayout>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@id/linearLayout12"
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout11"
            app:layout_constraintVertical_bias="0.0">

            <CheckBox
                android:id="@+id/cbpropina"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Desea incluir la propina"
                android:onClick="propina"
                android:textColor="#757575"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout13"
            android:layout_width="390dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout12">

            <TextView
                android:id="@+id/tvcant"
                android:layout_width="576dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FF5722"
                android:gravity="center"
                android:text="Ingrese cantidad de personas:"
                android:textColor="#ffff"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/etcant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="0"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout14"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="61dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout13">

            <TextView
                android:id="@+id/tvcompra"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#CDDC39"
                android:gravity="center"
                android:text="Total Compra:"
                android:textColor="#ffff"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/ettotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="0"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textSize="22dp" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
